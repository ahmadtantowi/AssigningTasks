@model AssigningTasks.Sample.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<!-- BEGIN HEAD -->
<head>
    <title>Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Oxygen" rel="stylesheet">
    <link href="~/lib/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/plugins/uniform/css/uniform.default.min.css" rel="stylesheet" type="text/css">
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="~/css/components-rounded.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="~/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/css/layout.css" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="#" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        @*<a href="#">
            <img src="~/images/icons/zurich-logo.svg" alt="" style="height:50px; margin-bottom:35px" />
        </a>*@
    </div>
    <!-- END LOGO -->
    <div class="content">
        <form id="FormLogin" class="login-form" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            @*<input name="__RequestVerificationToken" type="hidden" value="CfDJ8EzxZQE2fOlFvN25xZ9REemhmQybnhO9AMA3wy7sdhb47J2sk1A9TJ86FJ9l3VXdUE5NT3lAlKbAZmoTM6ls9jcf2NWXgHlk3giKxETk_5j52he7uILSBizblRlge45lGg_IzsR6C_ie2j8dG2gFd-c" />*@
            <div class="form-title">
                <span class="form-title">Selamat datang di aplikasi<br/>Alokasi Tugas Karyawan Minimarket</span> <br cleaer="all">
                <span class="form-subtitle">Everything is possible</span> <br cleaer="all"> <br cleaer="all">
                <span class="form-subtitle">Masukkan Username dan Password</span> <br />
                @if (ViewBag.ErrorMessage != null)
                {
                    <span class="form-subtitle">@ViewBag.ErrorMessage</span>
                }
            </div>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Masukkan Username dan Password.
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <input asp-for="Username" class="form-control placeholder-no-fix" type="text" placeholder="Username" autocomplete="off" tabindex="1" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input asp-for="Password" class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" tabindex="2" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-block uppercase" tabindex="3">Login</button>
            </div>
        </form>
    </div>
    <script src="~/lib/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/plugins/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/lib/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/lib/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/lib/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <script src="~/lib/plugins/jquery.cokie.min.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script type="text/javascript" src="~/js/metronic.js"></script>
    <script type="text/javascript" src="~/js/layout.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- END PAGE LEVEL SCRIPTS -->
    <script>jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
        });</script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>